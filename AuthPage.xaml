<Page x:Class="Hakimov41.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hakimov41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин" VerticalAlignment="Center" Margin="0, 0, 10, 5"/>
        <TextBox Name="LoginTextBox" Grid.Row="0" Grid.Column="1" Margin="0,30,0,26" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.289"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.71"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Пароль" VerticalAlignment="Center" Margin="0, 0, 10, 5"/>
        <TextBox Name="PasswordTextBox" Grid.Row="1" Grid.Column="1" Margin="0,21,0,33"/>

        <Button Grid.Row="2" Grid.Column="0" Content="Войти как гость" Margin="0, 10, 10, 0" Click="GuestButton_Click"/>
        <Button x:Name="LoginButton" Grid.Row="2" Grid.Column="1" Content="Войти" Margin="10, 10, 0, 0" Click="LoginButton_Click"/>
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Visibility="Collapsed" x:Name="CaptchaPanel">
            <TextBlock Text="Введите символы: " VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Name="capchaOneWord"   FontSize="22" Margin="0,0,5,0"/>
            <TextBlock Name="capchaTwoWord"   FontSize="22" TextDecorations="Strikethrough" Margin="0,5,5,0"/>
            <TextBlock Name="capchaThreeWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,0,5,0"/>
            <TextBlock Name="capchaFourWord"  FontSize="22" TextDecorations="Strikethrough" Margin="0,10,5,0"/>

            <TextBox x:Name="CaptchaInput" Width="80" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>
