<Page x:Class="Hakimov41.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hakimov41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,5,0,5">
            <TextBlock Name="CountTextBlock"
                   HorizontalAlignment="Left"
                   FontSize="18"
                   Margin="10"/>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="0,0,20,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Вы авторизованы как:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
                    <TextBlock Name="FioTB"
                       VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                    <TextBlock Text="Роль:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
                    <TextBlock Name="RoleTB"
                       VerticalAlignment="Center"/>
                </StackPanel>

            </StackPanel>
        </Grid>

        <WrapPanel Grid.Row="1"
               Orientation="Horizontal"
               HorizontalAlignment="Center"
               Margin="0,5,0,5">
            <StackPanel Margin="10" Orientation="Horizontal">
                <TextBlock Text="Введите название для поиска"
                       TextAlignment="Right"
                       Width="300"
                       FontSize="20"/>
                <TextBox Name="TBoxSearch"
                     TextChanged="TBoxSearch_TextChanged"
                     Width="300"
                     FontSize="15"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Выберите название для поиска"
                       TextAlignment="Right"
                       Width="300"
                       FontSize="20"/>
                <ComboBox Name="ComboType"
                      SelectionChanged="ComboType_SelectionChanged"
                      FontSize="15"
                      Width="200">
                    <TextBlock>все</TextBlock>
                    <TextBlock>от 0 до 9,99%</TextBlock>
                    <TextBlock>от 10 до 14,99%</TextBlock>
                    <TextBlock>от 15 до 100%</TextBlock>
                </ComboBox>
            </StackPanel>
        </WrapPanel>

        <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                Margin="10,0,0,5">
            <RadioButton Content="По возрастанию стоимости"
                     GroupName="Sort"
                     Width="300"
                     FontSize="20"
                     Name="RButtonUp"
                     Checked="RButtonUp_Checked"/>
            <RadioButton Content="По убыванию стоимости"
                     GroupName="Sort"
                     Width="300"
                     FontSize="20"
                     Name="RButtonDown"
                     Margin="20,0,0,0"
                     Checked="RButtonDown_Checked"/>
        </StackPanel>

        <ListView Name="ProductListView" Grid.Row="3">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"></ColumnDefinition>
                            <ColumnDefinition Width="800"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Width="140" Grid.RowSpan="4">
                            <Image.Source>
                                <Binding Path="MainImagePath">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            /res/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding ProductName}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Text="{Binding ProductDescription}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductManufacturer}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductCost, StringFormat={}{0:0} рублей }"  Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="Скидка" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductDiscountAmount, StringFormat={}{0} %}" Opacity="{Binding ProductDiscountAmount}" Margin="5" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="24"></TextBlock>
                    </Grid>
                   
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
